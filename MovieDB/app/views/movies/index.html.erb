<div class="row">
  <div class="col-md-8 col-md-offset-2"> 
    <h1>Welcome to MovieDB!</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2"> 
    <p id="notice"><%= notice %></p>
    <%= link_to 'New Movie', new_movie_path %>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">    
          <% @movies.each do |movie| %>
            <div class="col-md-4">
              <h1><%= movie.title %></h1>
              <img src="<%= movie.picture %>" alt="Picture of <%= movie.title %>" class="movie_img_format">
              <p><%= movie.description %></p>
              <div><%= link_to 'Show', movie %></div>
              <p><%= link_to 'Edit', edit_movie_path(movie) %></p>
              <p><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </div>
          <% end %>
      <br>
      </div>
  </div>
