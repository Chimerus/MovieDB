<div class="row">
  <div class="col-md-8 col-md-offset-2"> 
    <h1>Welcome to MovieDB!</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">    
          <% @movies.each do |movie| %>
            <div class="col-md-4">
              <h1><a href="/movies/<%= movie.id %>" title="link to <%= movie.title %>"><%= movie.title %></a></h1>
              <img src="<%= movie.picture %>" alt="Picture of <%= movie.title %>" class="movie_img_format">
              <% if movie.reviews.average(:score) %>
                <!-- average review, cut off at one decimal -->
                <p>User Average Review: <%= movie.reviews.average(:score).to_s.slice(0..2) %>/5</p>
              <% else %>
                <p>No User Review Scores Yet</p>
              <% end %>
              <p><%= movie.description %></p>
              <!-- ADMIN only edit/destroy -->
              <% if current_user && current_user.is_admin %>
                <%= link_to 'Edit', edit_movie_path(movie) %> | <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          <% end %>
      <br>
      </div>
  </div>
