<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>
<img src="<%= @user.picture %>" alt="Picture of <%= @user.username %>"/>
<br>
<% if current_user %>
<!-- only the user who this is and the admins can edit the user -->
  <% if @user.user_id == current_user.id || current_user.is_admin %>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <% end %>
<% end %>
<%= link_to 'Back', users_path %>
