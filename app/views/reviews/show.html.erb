<p id="notice"><%= notice %></p>
<h4><a href="/users/<%= @review.user.id %>" title="link to user"><%= @review.user.username %></a></h4>
<h5>Review for: <a href="/movies/<%= @review.movie.id %>" title="link to movie"><%= @review.movie.title %></a></h5>
<p><strong><%= @review.score %>/5 </strong><span class="glyphicon glyphicon-star"></span></p>
<p><%= @review.comment %></p>
<% if current_user %>
<!-- only the user who this is and the admins can edit the user -->
  <% if @review.user_id == current_user.id || current_user.is_admin %>
   <%= link_to 'Edit', edit_review_path(@review) %>
  <% end %>
<% end %> 
<br><br> 
<h4><span class="glyphicon glyphicon-chevron-left"></span><%= link_to 'Back', reviews_path %></h4>
